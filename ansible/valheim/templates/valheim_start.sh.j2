#!/bin/bash
# Valheim Dedicated Server Start Script
# Generated by ansible for server: {{ server_id }}

export templdpath=$LD_LIBRARY_PATH
export LD_LIBRARY_PATH={{ valheim_home }}/server/linux64:$LD_LIBRARY_PATH
export SteamAppId=892970

cd {{ valheim_home }}/server

./valheim_server.x86_64 \
    -name "{{ server_name }}" \
    -port {{ game_port }} \
    -world "{{ world_name }}" \
    -password "{{ password }}" \
    -savedir "{{ valheim_home }}/data" \
    -public {{ public }} \
    -logFile "{{ valheim_home }}/logs/valheim.log"

export LD_LIBRARY_PATH=$templdpath
